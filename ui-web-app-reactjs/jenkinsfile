pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    stages {
        stage('Code Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/Akhileshsingh07/micro-project.git', credentialsId: 'github']]
                ])
            }
        }

        stage('Install Dependencies') {
            steps {
                // Navigate to the ui-web-app-reactjs directory and install npm dependencies
                dir('ui-web-app-reactjs') {
                    sh 'npm install'
                }
            }
        }

        stage('Build') {
            steps {
                // Build the React app within the ui-web-app-reactjs directory
                dir('ui-web-app-reactjs') {
                    sh 'npm run build'
                }
            }
        }
         // Add a step to list the contents of the build directory
        stage('Verify Build Directory') {
            steps {
                dir('ui-web-app-reactjs') {
                    sh 'if [ -d build ]; then echo "Build directory exists"; else echo "Build directory does not exist"; fi'
                    sh 'ls -la build || echo "Build directory is empty or does not exist"'
                }
            }
        }

       stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'ui-web-app-reactjs/build/**/*'
            }
        }
    }
}
