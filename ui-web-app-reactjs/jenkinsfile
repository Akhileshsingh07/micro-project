pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    stages {
        stage('Code Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/Akhileshsingh07/micro-project.git', credentialsId: 'github']]
                ])
            }
        }
        // Installing the dependencies-Here npm reads package.json repository and install all the dependencies in node_module directry
        stage('Install Dependencies') {
            steps {
                
                dir('ui-web-app-reactjs') {
                    sh 'npm install'
                }
            }
        }
        // Source code build and package
        stage('Build') {
            steps {
                
                dir('ui-web-app-reactjs') {
                    sh 'npm run build'
                }
            }
        }
        
       // Archive the artifacts    
       stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'ui-web-app-reactjs/dist/**'
            }
        }
        // Image Build
        stage('Image Build') {
            steps {
               script {
                 
                
                dir('ui-web-app-reactjs') {
                   sh "docker build -t akhileshsingh1216/react-app . "
                }
               }
            }
        }
        // pushing the imaige to dockerHuub
        stage('Push Docker Image') {
            steps {
                script {
                    sh "docker images"
                    withDockerRegistry(credentialsId: 'dockerhub'){
                        sh "docker push akhileshsingh1216/react-app"
                    }
                }
            }
        }
        // Deploy the container locally
        stage('Deploy the container') {
            steps {
                script {
                    
                    sh 'docker stop reactjs-app || true'
                    sh 'docker rm reactjs-app || true'
                    
                    sh "docker run -d -p 5000:5000 --name reactjs-app akhileshsingh1216/react-app"
                    
                }
            }
        }

    }
}
