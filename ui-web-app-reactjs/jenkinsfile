pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    stages {
        stage('Code Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/Akhileshsingh07/micro-project.git', credentialsId: 'github']]
                ])
            }
        }

        stage('Install Dependencies') {
            steps {
                // Navigate to the ui-web-app-reactjs directory and install npm dependencies
                dir('ui-web-app-reactjs') {
                    sh 'npm install'
                }
            }
        }

        stage('Build') {
            steps {
                // Build the React app within the ui-web-app-reactjs directory
                dir('ui-web-app-reactjs') {
                    sh 'npm run build'
                }
            }
        }
        

       stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'ui-web-app-reactjs/dist/**'
            }
        }
        stage('Image Build') {
            steps {
               script {
                 
                // Build the React app within the ui-web-app-reactjs directory
                dir('ui-web-app-reactjs') {
                   sh "docker build -t akhileshsingh1216/react-app . "
                }
               }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    sh "docker images"
                    withDockerRegistry(credentialsId: 'dockerhub'){
                        sh "docker push akhileshsingh1216/react-app"
                    }
                }
            }
        }

        stage('docker pull and deploy') {
            steps {
                script {
                    sh 'docker stop reactjs-app || true'
                    sh 'docker rm reactjs-app || true'
                    
                    sh "docker run -d -p 5000:5000 --name reactjs-app akhileshsingh1216/react-app"
                    
                }
            }
        }

    }
}
